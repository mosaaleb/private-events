
<div class="show-users">

  <div class="enrolled-upcoming-events">
    <h2>Enrolled  Upcoming Events</h2>

    <div class="event-box">
      <% @enrolled_upcoming_events.each do |event| %>
        <div class="event-name">
          <%= link_to capitalize(event.name), event %>
        </div>

        <div class="event-info">
          <p>
            <%= image_tag 'date.png' %>
            <%= event.date.strftime("%B %d, %Y") %>
          </p>
        </div>
      <% end %>
    </div>

  </div>

  <div class='events-details'>

    <div class="event-header">
      <% if @user == current_user %>
        <h2>Your Events</h2>
      <% else %>
        <h2><%= @user.name %>'s Events</h2>
      <% end %>
    </div>

    <div class="event-box">
      <% @upcoming_events.each do |event| %>

        <div class='event-name'>
          <%= link_to capitalize(event.name), event %>
        </div>
        
      <% end %>
    </div>

  </div>

</div>
